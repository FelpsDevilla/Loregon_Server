{
  "name": "loregon-server",
  "version": "1.0.0",
  "description": "Server loregon",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "typeorm": "typeorm-ts-node-esm",
    "migrations:generate": "typeorm-ts-node-esm migration:generate -d src/data-source.ts",
    "createDB": "typeorm-ts-node-esm migration:generate -d src/data-source.ts src/migrations/createDB && typeorm-ts-node-esm migration:run -d src/data-source.ts",
    "migrations:run": "typeorm-ts-node-esm migration:run -d src/data-source.ts",
    "migrations:revert": "typeorm-ts-node-esm migration:revert -d src/data-source.ts",
    "dev": "nodemon --watch src --ext ts --delay 200ms --exec \"tsx src/main.ts\"",
    "build": "tsc && resolve-tspaths",
    "start": "typeorm-ts-node-esm migration:run -d dist/data-source.js && node dist/main.js",
    "docker": "docker-compose -f docker-compose.test.yml --project-name test_loregon up -d",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "author": "Felipe Devilla",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "file-type": "^20.5.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.16.0",
    "pg-pool": "^3.7.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.23",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "nodemon": "^3.1.10",
    "resolve-tspaths": "^0.8.23",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  }
}
